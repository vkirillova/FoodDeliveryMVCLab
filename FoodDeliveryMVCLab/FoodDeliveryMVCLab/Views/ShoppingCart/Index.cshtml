@model IEnumerable<FoodDeliveryMVCLab.Models.ShoppingCart.ShoppingCartViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>GetCart</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DishId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dish.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dish.Price)
        </th>
        <th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DishId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DishName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
        </tr>
    }
    </tbody>
</table>

<form asp-action="Index" asp-controller="Order" method="get">
    <input type="submit" value="Order" />
</form>